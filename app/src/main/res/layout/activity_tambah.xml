<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TambahActivity"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tambah Menu Baru"
        android:layout_marginBottom="16dp"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iv_tambah_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/et_tambah_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Menu"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_tambah_asal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Asal Menu"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_tambah_desksingkat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deskripsi Singkat Menu"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_tambah_desklengkap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deskripsi Lengkap Menu"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_tambah_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Link Foto Menu"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_tambah_tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah"/>

</LinearLayout>